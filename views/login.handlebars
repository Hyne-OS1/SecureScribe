{{!-- example of a login.handlebar file --}}
{{!-- this will contain only html referencing login information --}}
{{!-- this will feed back to main handlebars --}}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Login</title>
  </head>

<body>
<div class="container mt-5 pt-5">
    <div class="row text-center justify-content-center border">
        <div class="col-sm-2 card-body shadow p-5 rounded bg-white">
            <h1 class="text-bold text-center">Welcome Back!</h1>
            <h2 class="lead pt-5 fw-bold">Login to access your account:</h2>
          <input type="text" class="form-control" placeholder="Username or Email" aria-label="Username or Email">
          <div class="col">
              <input type="text" class="form-control" placeholder="Password" aria-label="Password">
              <button type="button" class="btn bg-warning text-dark">Login</button>
            </div>
        </div>
      </div>
</div>






</body>





</html>